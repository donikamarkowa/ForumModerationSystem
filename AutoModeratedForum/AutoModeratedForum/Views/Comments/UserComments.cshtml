@model IEnumerable<AutoModeratedForum.Entities.Comment>
@using AutoModeratedForum.Enums

<h2>My Comments</h2>

@if (!Model.Any())
{
    <p>You have not posted any comments yet.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Content</th>
                <th>Created At</th>
                <th>Status</th>
                <th>Moderator Notes</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var comment in Model)
            {
                string statusText;

                if (comment.ModerationRequest == null)
                {
                    statusText = "Approved";
                }
                else
                {
                    statusText = comment.ModerationRequest.Decision switch
                    {
                        ModerationDecision.Pending => "Pending",
                        ModerationDecision.Approved => "Approved",
                        ModerationDecision.Rejected => "Rejected",
                        _ => "Unknown"
                    };
                }

                <tr>
                    <td>@comment.Content</td>
                    <td>@comment.CreatedAt.ToLocalTime()</td>
                    <td>@statusText</td>
                    <td>@(string.IsNullOrWhiteSpace(comment.ModerationRequest?.Notes) ? "-" : comment.ModerationRequest!.Notes)</td>
                </tr>
            }
        </tbody>
    </table>
}
